            "initCollapsed": true
          },
          "fields": [
            {
              "name": "size",
              "type": "select",
              "defaultValue": "oneThird",
              "options": [
                {
                  "label": "One Third",
                  "value": "oneThird"
                },
                {
                  "label": "Half",
                  "value": "half"
                },
                {
                  "label": "Two Thirds",
                  "value": "twoThirds"
                },
                {
                  "label": "Full",
                  "value": "full"
                }
              ]
            },
            {
              "name": "richText",
              "type": "richText",
              "label": false,
              "editor": {
                "type": "lexical",
                "features": [
                  "rootFeatures",
                  "HeadingFeature",
                  "FixedToolbarFeature",
                  "InlineToolbarFeature"
                ],
                "headingSizes": ["h2", "h3", "h4"]
              }
            },
            {
              "name": "enableLink",
              "type": "checkbox"
            },
            {
              "name": "link",
              "type": "group",
              "admin": {
                "hideGutter": true,
                "condition": "siblingData?.enableLink"
              },
              "fields": [
                {
                  "type": "row",
                  "fields": [
                    {
                      "name": "type",
                      "type": "radio",
                      "admin": {
                        "layout": "horizontal",
                        "width": "50%"
                      },
                      "defaultValue": "reference",
                      "options": [
                        {
                          "label": "Internal link",
                          "value": "reference"
                        },
                        {
                          "label": "Custom URL",
                          "value": "custom"
                        }
                      ]
                    },
                    {
                      "name": "newTab",
                      "type": "checkbox",
                      "admin": {
                        "style": {
                          "alignSelf": "flex-end"
                        },
                        "width": "50%"
                      },
                      "label": "Open in new tab"
                    }
                  ]
                },
                {
                  "type": "row",
                  "fields": [
                    {
                      "name": "reference",
                      "type": "relationship",
                      "admin": {
                        "condition": "siblingData?.type === 'reference'",
                        "width": "50%"
                      },
                      "label": "Document to link to",
                      "relationTo": ["pages", "posts"],
                      "required": true
                    },
                    {
                      "name": "url",
                      "type": "text",
                      "admin": {
                        "condition": "siblingData?.type === 'custom'",
                        "width": "50%"
                      },
                      "label": "Custom URL",
                      "required": true
                    },
                    {
                      "name": "label",
                      "type": "text",
                      "admin": {
                        "width": "50%"
                      },
                      "label": "Label",
                      "required": true
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "slug": "archive",
      "interfaceName": "ArchiveBlock",
      "fields": [
        {
          "name": "introContent",
          "type": "richText",
          "label": "Intro Content",
          "editor": {
            "type": "lexical",
            "features": [
              "rootFeatures",
              "HeadingFeature",
              "FixedToolbarFeature",
              "InlineToolbarFeature"
            ],
            "headingSizes": ["h1", "h2", "h3", "h4"]
          }
        },
        {
          "name": "populateBy",
          "type": "select",
          "defaultValue": "collection",
          "options": [
            {
              "label": "Collection",
              "value": "collection"
            },
            {
              "label": "Individual Selection",
              "value": "selection"
            }
          ]
        },
        {
          "name": "relationTo",
          "type": "select",
          "admin": {
            "condition": "siblingData.populateBy === 'collection'"
          },
          "defaultValue": "posts",
          "label": "Collections To Show",
          "options": [
            {
              "label": "Posts",
              "value": "posts"
            }
          ]
        },
        {
          "name": "categories",
          "type": "relationship",
          "admin": {
            "condition": "siblingData.populateBy === 'collection'"
          },
          "hasMany": true,
          "label": "Categories To Show",
          "relationTo": "categories"
        },
        {
          "name": "limit",
          "type": "number",
          "admin": {
            "condition": "siblingData.populateBy === 'collection'",
            "step": 1
          },
          "defaultValue": 10,
          "label": "Limit"
        },
        {
          "name": "selectedDocs",
          "type": "relationship",
          "admin": {
            "condition": "siblingData.populateBy === 'selection'"
          },
          "hasMany": true,
          "label": "Selection",
          "relationTo": ["posts"]
        }
      ],
      "labels": {
        "plural": "Archives",
        "singular": "Archive"
      }
    },
    {
      "slug": "formBlock",
      "interfaceName": "FormBlock",
      "fields": [
        {
          "name": "form",
          "type": "relationship",
          "relationTo": "forms",
          "required": true
        },
        {
          "name": "enableIntro",
          "type": "checkbox",
          "label": "Enable Intro Content"
        },
        {
          "name": "introContent",
          "type": "richText",
          "admin": {
            "condition": "siblingData?.enableIntro"
          },
          "label": "Intro Content",
          "editor": {
            "type": "lexical",
            "features": [
              "rootFeatures",
              "HeadingFeature",
              "FixedToolbarFeature",
              "InlineToolbarFeature"
            ],
            "headingSizes": ["h1", "h2", "h3", "h4"]
          }
        }
      ],
      "graphQL": {
        "singularName": "FormBlock"
      },
      "labels": {
        "plural": "Form Blocks",
        "singular": "Form Block"
      }
    }
